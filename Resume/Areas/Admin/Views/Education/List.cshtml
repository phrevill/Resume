@using Resume.Bussines.Extensions
@model Resume.DataAccessLayer.ViewModels.Education.FilterEducationViewModel

@{
    ViewData["Title"] = "لیست تحصیلات";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb-4">
        <div class="card">
            <div class="header">
                <h2>
                    فیلتر ها
                </h2>
            </div>
            <div class="body">
                <form method="get" asp-action="List" id="filter-search">
                    <input type="hidden" asp-for="Page"/>
                    <div class="row clearfix">
                        <div class="col-sm-12  col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" class="form-control" asp-for="Title">
                                    <label class="form-label" asp-for="Title"></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="date" class="form-control" asp-for="Start">
                                    <label class="form-label" asp-for="Start"></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="date" class="form-control" asp-for="End">
                                    <label class="form-label" asp-for="End"></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <button class="btn btn-success">جستجو</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
            </div>
            <div class="body table-responsive">
                @if (Model != null && Model.Entities != null && Model.Entities.Any())
                {
                    <table class="table">
                        <thead>
                        <tr>
                            <th>آیدی</th>
                            <th>عنوان</th>
                            <th>تاریخ از</th>
                            <th>تاریخ تا</th>
                            <th>تاریخ ایجاد</th>
                            <th>عملیات</th>
                        </tr>
                        </thead>
                        <tbody>

                        @foreach (var education in Model.Entities)
                        {
                            <tr>
                                <th scope="row">@education.Id</th>
                                <td>@education.Title</td>
                                <td>@education.Start</td>
                                <td>
                                    @if (education.End.HasValue)
                                    {
                                        <text>@education.End</text>
                                    }
                                    else
                                    {
                                        <text>---</text>
                                    }
                                </td>
                                <td>@education.CreateDate.ToShamsi()</td>
                                <td>
                                    <a asp-action="Update" class="text-warning" asp-route-id="@education.Id">
                                        <i class="fa fa-pen"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>

                    <partial name="_AdminPagination" model="@Model.GetCurrentPaging()"/>
                }
                else
                {
                    <partial name="_AdminNotFound"/>
                }
            </div>
        </div>
    </div>
</div>